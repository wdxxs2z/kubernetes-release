#!/bin/bash
set -e -x

echo "Copying kubernetes..."

tar zxvf ${BOSH_COMPILE_TARGET}/kubernetes/kubernetes-server-linux-1.4.3-amd64.tar.gz

if [[ $? != 0 ]] ; then
  echo "Failed extracting kubernetes server"
  exit 1
fi

cp kubernetes/server/bin/{kube-apiserver,kube-controller-manager,kubectl,kube-proxy,kube-scheduler,kubelet} ${BOSH_INSTALL_TARGET}/
